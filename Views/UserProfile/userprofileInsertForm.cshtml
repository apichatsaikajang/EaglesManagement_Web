    <script src="@Url.Content("~/Content/AdminLTE-2.4.5/bower_components/select2/dist/js/select2.full.min.js")"></script>
}

@section custom_script{
    <script>
        $(document).ready(function () {
            //Date picker
            $('.datepicker').datepicker({
                autoclose: true,
                //todayBtn: true,
                todayHighlight: true,
                format: 'dd-mm-yyyy',
                startDate: Date()
            });
        });
    </script>

    <script>
    $(document).ready(function () {
        //Timepicker
        $('.timepicker').timepicker({
            showInputs: false,
            defaultTime: 'current',
            showMeridian: false,
            minuteStep: 1,
        });
    });
    </script>



}

@section header{
    <h1>
        User Profile
        <small>Insert Form</small>
    </h1>
}

@section content{
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="col-md-6" style="padding:initial;">
                        <h3></h3>
                    </div>
                    <div class="col-md-6 text-right" style="padding:initial;">
                        <a href="@Url.Action("Index", "UserProfile")" class="btn btn-primary"><i class="fa fa-reply"></i>&nbsp;&nbsp;Back</a>
                    </div>
                </div>
                <div class="box-body">

                    @using (Html.BeginForm("insertUserProfile", "Userprofile", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                      
               
                        <div class="form-group">
                            @Html.Label("UserName", "UserName : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("UserName", null, new { @class = "form-control", @autocomplete = "off" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Name", "Name : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("Name", null, new { @class = "form-control", @autocomplete = "off" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Mail", "Mail : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("Mail", null, new { @class = "form-control", @autocomplete = "off" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Branch", "Branch : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.DropDownList("Branch", BranchListItems.OrderBy(x => x.Text), null, new { @class = "form-control select2", @autocomplete = "off" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Party", "Party : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.DropDownList("Party", PartyListItems.OrderBy(x => x.Text), null, new { @class = "form-control select2", @autocomplete = "off" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.Label("Dept", "Dept : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.DropDownList("Dept", DeptListItems.OrderBy(x => x.Text), null, new { @class = "form-control select2", @autocomplete = "off" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.Label("Password", "Password : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("Password", null, new { @class = "form-control", @autocomplete = "off" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.Label("Password", "Password Confirm : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("Password", null, new { @class = "form-control", @autocomplete = "off" })
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-4">
                                <button type="submit" class="btn btn-success" id="btnSubmit">Save</button>&nbsp;
                                <button type="reset" class="btn btn-default" id="btnReset">Reset</button>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>

}