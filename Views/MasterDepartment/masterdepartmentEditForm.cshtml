@model dynamic
@{
    //ViewBag.Title = "insertForm";
    Layout = "~/Views/Home/Index.cshtml";


    string Branch = Model.editdepartment.Branch;
    string Party = Model.editdepartment.Party;
    string Department = Model.editdepartment.Department;
    string Manager = Model.editdepartment.Manager;
    string A_Manager = Model.editdepartment.A_Manager;
    //string A_Manager = (Model.editdepartment.A_Manager == null) ? "" : Model.editdepartment.A_Manager;

    int Status = Model.editdepartment.Status;
   // int AS_TYPE_1 = (Model.Assign.AS_TYPE_1 != null) ? Model.Assign.AS_TYPE_1 : 0;


    var BranchListItems = new SelectList(
    new List<SelectListItem>{
            new SelectListItem { Selected = false, Text = "ทุกสาขา", Value = "1" },
            new SelectListItem { Selected = false, Text = "CKT", Value = "CKT" },
            new SelectListItem { Selected = false, Text = "LKB", Value = "LKB" },
            new SelectListItem { Selected = false, Text = "OTK", Value = "OTK" },
            new SelectListItem { Selected = false, Text = "PTN", Value = "PTN" },
            new SelectListItem { Selected = false, Text = "SBIA", Value = "SBIA" },
            new SelectListItem { Selected = false, Text = "SPM", Value = "SPM" },

        }, "Value", "Text", 1);

}

@section custom_css{
    <!-- bootstrap datepicker -->
    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLTE-2.4.5/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css")">
    <!-- Bootstrap time Picker -->
    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLTE-2.4.5/plugins/timepicker/bootstrap-timepicker.min.css")">
    <!-- Select2 -->
    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLTE-2.4.5/bower_components/select2/dist/css/select2.min.css")">
}

@section custom_js{
    <!-- bootstrap datepicker -->
    <script src="@Url.Content("~/Content/AdminLTE-2.4.5/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js")"></script>
    <!-- bootstrap time picker -->
    <script src="@Url.Content("~/Content/AdminLTE-2.4.5/plugins/timepicker/bootstrap-timepicker.min.js")"></script>
    <!-- Select2 -->
    <script src="@Url.Content("~/Content/AdminLTE-2.4.5/bower_components/select2/dist/js/select2.full.min.js")"></script>
}

@section custom_script{
    <script>
        $(document).ready(function () {
            //Date picker
            $('.datepicker').datepicker({
                autoclose: true,
                //todayBtn: true,
                todayHighlight: true,
                format: 'dd-mm-yyyy',
                startDate: Date()
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            //Timepicker
            $('.timepicker').timepicker({
                showInputs: false,
                defaultTime: 'current',
                showMeridian: false,
                minuteStep: 1,
            });
        });
    </script>



}

@section header{
    <h1>
        User Profile
        <small>Insert Form</small>
    </h1>
}

@section content{
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="col-md-6" style="padding:initial;">
                        <h3></h3>
                    </div>
                    <div class="col-md-6 text-right" style="padding:initial;">
                        <a href="@Url.Action("Index", "MasterDepartment")" class="btn btn-primary"><i class="fa fa-reply"></i>&nbsp;&nbsp;Back</a>
                    </div>
                </div>
                <div class="box-body">

                    @using (Html.BeginForm("editMasterDepartment", "MasterDepartment", FormMethod.Post, new { @class = "form-horizontal" }))
                    {


                        @Html.Hidden("Branch", @Branch)
                        @Html.Hidden("Party", @Party)
                        @Html.Hidden("Department", @Department)

                        <div class="form-group">
                            @Html.Label("Branch", "สาขา : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.DropDownList("Branch", BranchListItems.OrderBy(x => x.Text), @Branch, new { @class = "form-control select2" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.Label("Party", "ฝ่าย : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("Party", @Party, new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.Label("Department", "แผนก : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("Department", @Department, new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.Label("Status", "Status Use : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.DropDownList("Status", BranchListItems.OrderBy(x => x.Text), null , new { @class = "form-control select2" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.Label("Manager", "Approve1 : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("Manager", @Manager, new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.Label("A_Manager", "Approve2 : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("A_Manager", @A_Manager, new { @class = "form-control" })
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-4">
                                <button type="submit" class="btn btn-success" id="btnSubmit">Update</button>&nbsp;
                                <button type="reset" class="btn btn-default" id="btnReset">Reset</button>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>

}