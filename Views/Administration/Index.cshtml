@model dynamic
@using EaglesManagement_Web.Controllers
@{
    //ViewBag.Title = "insertForm";
    Layout = "~/Views/Home/Index.cshtml";



    var BranchListItemsListItems = new SelectList(
new List<SelectListItem>{

            new SelectListItem { Selected = false, Text = "", Value = "" },
            new SelectListItem { Selected = false, Text = "CKT", Value = "CKT" },
            new SelectListItem { Selected = false, Text = "LKB", Value = "LKB" },
            new SelectListItem { Selected = false, Text = "OTK", Value = "OTK" },
            new SelectListItem { Selected = false, Text = "PTN", Value = "PTN" },
            new SelectListItem { Selected = false, Text = "SBIA", Value = "SBIA" },


        }, "Value", "Text", 1);

    var SelctionListItemsListItems = new SelectList(
new List<SelectListItem>{

            new SelectListItem { Selected = false, Text = "", Value = "" },
            new SelectListItem { Selected = false, Text = "Admin", Value = "Admin" },
            new SelectListItem { Selected = false, Text = "Formalities Customer Service", Value = "Formalities Customer Service" },
            new SelectListItem { Selected = false, Text = "General WareHouse", Value = "General WareHouse" },
            new SelectListItem { Selected = false, Text = "Maid", Value = "Maid" },
            new SelectListItem { Selected = false, Text = "Sales", Value = "Sales" },
            new SelectListItem { Selected = false, Text = "Traffic", Value = "Traffic" },
            new SelectListItem { Selected = false, Text = "WareHouse", Value = "WareHouse" },


        }, "Value", "Text", 1);



}

@section custom_css{
    <!-- bootstrap datepicker -->
    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLTE-2.4.5/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css")">
    <!-- Bootstrap time Picker -->
    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLTE-2.4.5/plugins/timepicker/bootstrap-timepicker.min.css")">
    <!-- Select2 -->
    <link rel="stylesheet" href="@Url.Content("~/Content/AdminLTE-2.4.5/bower_components/select2/dist/css/select2.min.css")">
}

@section custom_js{
    <!-- bootstrap datepicker -->
    <script src="@Url.Content("~/Content/AdminLTE-2.4.5/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js")"></script>
    <!-- bootstrap time picker -->
    <script src="@Url.Content("~/Content/AdminLTE-2.4.5/plugins/timepicker/bootstrap-timepicker.min.js")"></script>
    <!-- Select2 -->
    <script src="@Url.Content("~/Content/AdminLTE-2.4.5/bower_components/select2/dist/js/select2.full.min.js")"></script>
}

@section custom_script{
    <script>
        $(document).ready(function () {
            //Date picker
            $('.datepicker').datepicker({
                autoclose: true,
                //todayBtn: true,
                todayHighlight: true,
                format: 'dd-mm-yyyy',
                startDate: Date()
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            //Timepicker
            $('.timepicker').timepicker({
                showInputs: false,
                defaultTime: 'current',
                showMeridian: false,
                minuteStep: 1,
            });
        });
    </script>



}

@section header{
    <h1>
        Administration
        <small>Insert Form</small>
    </h1>
}

@section content{
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="col-md-6" style="padding:initial;">
                        <h3></h3>
                    </div>
                    <div class="col-md-6 text-right" style="padding:initial;">
                        <a href="@Url.Action("Index", "Institution")" class="btn btn-primary"><i class="fa fa-reply"></i>&nbsp;&nbsp;Back</a>
                    </div>
                </div>
                <div class="box-body">

                    @using (Html.BeginForm("Index", "Institution", FormMethod.Post, new { @class = "form-horizontal" }))
                    {

                        <div class="form-group">
                            @Html.Label("MILE_IN", "แจ้งสำนักงานใหญ่ทราบเพื่อดำเนินการแจ้งซ่อมเมื่อวันที่ : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.Label("", new { @class = "control-label col-md-4" })
                            </div>
                        </div>

                     

                        <div class="form-group">
                            @Html.Label("CUSTOMER", "ดำเนินการแจ้งซ่อมแล้ว เมื่อวันที่ : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                <div class="radio">
                                    <label>
                                        @Html.RadioButton("CUS_PART", 1, false, new { @onchange = "chgComPart()" }) Admin
                                    </label>
                                    &nbsp;&nbsp;&nbsp;
                                    <label>
                                        @Html.RadioButton("CUS_PART", 2, false, new { @onchange = "chgComPart()" }) IT
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("AS_MESSENGER", "สาขา : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.DropDownList("AS_MESSENGER", BranchListItemsListItems.OrderBy(x => x.Text), null, new { @class = "form-control select2" })
                            </div>
                        </div>



                        <div class="form-group">
                            @Html.Label("AS_MESSENGER", "แผนก : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.DropDownList("AS_MESSENGER", SelctionListItemsListItems.OrderBy(x => x.Text), null, new { @class = "form-control select2" })
                            </div>
                        </div>



                        <div class="form-group">
                            @Html.Label("AS_MESSENGER", "เลขที่ทรัพย์สิน : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("MILE_OUT", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("AS_MESSENGER", "จำนวน : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("MILE_OUT", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("AS_MESSENGER", "สถานะผู้ใช่งาน : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextBox("MILE_OUT", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("AS_MESSENGER", "อาการชำรุด : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.TextArea("MILE_OUT", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("MILE_IN", "ชื่อผู้แจ้ง : ", new { @class = "control-label col-md-4" })
                            <div class="col-md-5">
                                @Html.Label("", new { @class = "control-label col-md-4" })
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-4">
                                <button type="submit" class="btn btn-success" id="btnSubmit">Save</button>&nbsp;
                                <button type="reset" class="btn btn-default" id="btnReset">Reset</button>
                            </div>
                        </div>


                    }
                </div>
            </div>
        </div>
    </div>
}
}
